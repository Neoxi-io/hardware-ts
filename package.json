{
  "name": "@neoxi-io/hardware-ts",
  "version": "1.2.0",
  "description": "",
  "main": "dist/index.js",
  "publishConfig": {
    "@neoxi-io:registry": "https://npm.pkg.github.com"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "scripts": {
    "build": "tsc",
    "test": "jest --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Neoxi-io/hardware-ts.git"
  },
  "author": "Neoxi-io",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Neoxi-io/hardware-ts/issues"
  },
  "homepage": "https://github.com/Neoxi-io/hardware-ts#readme",
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/i2c-bus": "^5.1.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.14.11",
    "@types/polycrc": "^0.1.2",
    "@types/sleep": "^0.0.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "debug": "^4.3.5",
    "i2c-bus": "^5.2.3",
    "onoff": "^6.0.3",
    "perf_hooks": "^0.0.1",
    "polycrc": "^1.1.1",
    "sleep": "^6.3.0"
  }
}
